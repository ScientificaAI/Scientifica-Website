---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Web Scientifica" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png+xml" href="/favi.png" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  *,
  *::after,
  *::before {
    box-sizing: border-box;
  }

  * {
    padding: 0;
    margin: 0;
  }

  html {
    font-family: "Biotif", system-ui, sans-serif;
    background: #fff;
    background-size: 224px;
  }

  @font-face {
    font-family: "Biotif";
    src: url("/font/biotif.otf") format("otf");
    font-weight: 900;
    font-style: normal;
    font-display: swap;
  }

  body {
    width: fit-content;
  }
</style>
