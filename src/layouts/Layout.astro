---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "@fontsource/poppins";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Web Scientifica" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png+xml" href="/favi.png" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  * {
    padding: 0;
    margin: 0;
  }

  html {
    font-family: "Poppins", system-ui, sans-serif;
    background: #fff;
    background-size: 224px;
  }
  body {
    width: fit-content;
  }
</style>
