---
interface Props {
  title: string;
}

const { title } = Astro.props;
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { AWSWAFCaptchaModal } from "../aws-waff-captcha/AWSWAFFCaptchaModal";
import "@fontsource-variable/manrope";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Web Scientifica" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png+xml" href="/favi.png" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <AWSWAFCaptchaModal client:only />
    <Footer />
  </body>
</html>
<style is:global>
  *,
  *::after,
  *::before {
    box-sizing: border-box;
  }

  * {
    padding: 0;
    margin: 0;
  }

  html {
    font-family: "Manrope", system-ui, sans-serif;
    background: #fff;
    background-size: 224px;
  }

  body {
    width: fit-content;
  }

  .overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(128, 128, 128, 0.5);
    display: none;
    z-index: 999;
  }

  .modal {
    position: fixed;
    top: 50vh;
    left: 50vw;
    transform: translate(-50%, -50%);
    background-color: white;
  }
</style>
