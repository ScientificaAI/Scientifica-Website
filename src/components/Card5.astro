---
import { card5 } from "../data/card5.js";
---

<div class="grid grid-cols-1 md:grid-cols-2">
  {
    card5.map((card, index) => (
      <div class="flex-1 m-6 p-6 bg-white rounded-xl shadow-md">
        <div>
          <card.logo />
        </div>
        <div class="text-2xl mb-6 font-semibold">
          <h2>{card.title}</h2>
        </div>
        <div>
          <p class="text-2xl text-gray-400 line-clamp-8">{card.body}</p>
        </div>
      </div>
    ))
  }
</div>
