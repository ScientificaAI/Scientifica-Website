---
interface Props {
  title: string;
  body: string;
  logo: string;
}

const { title, body, logo } = Astro.props;
---

<div class="flex-1 m-6 p-6 bg-white rounded-xl shadow-md">
  <div>
    <img src={logo} alt={title} />
  </div>
  <div class="text-2xl mb-6 font-semibold">
    <h2>{title}</h2>
  </div>
  <div>
    <p class="text-2xl text-gray-400 line-clamp-8">
      {body}
    </p>
  </div>
</div>
