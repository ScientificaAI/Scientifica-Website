---
import IconArrow from "./IconArrow.astro";

interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<div class="bg-white rounded-xl p-4 shadow-md">
  <h3 class="md:text-xl py-4 flex text-center md:text-right text-2xl">
    {title}
  </h3>

  <div class="flex-1">
    <p class="md:text-base text-xl text-[#737373]">
      {body}
    </p>
  </div>
  <div class="text-xl font-bold">
    <button>
      <a href="/services">
        More Info
        <IconArrow />
      </a>
    </button>
  </div>
</div>

<style>
  button {
    position: relative;
    overflow: hidden;
    border: none;
    background: transparent;
    padding: 4px 0;
  }

  button a {
    display: flex;
    align-items: center;
    gap: 1rem;
    text-decoration: none;
    color: #171717;
    font-size: 1.125rem;
  }

  button::before {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: #0024ff;
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.3s ease-in-out;
  }

  button:hover::before {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  button a svg {
    width: 1.5rem;
    height: 1.5rem;
    fill: currentColor;
  }
</style>
