---
interface CardItem {
  title: string;
  logo: any;
}

interface Props {
  title: string;
  card: CardItem[];
}

const { title, card } = Astro.props;
---

<article>
  <div
    class="flex items-center text-center justify-center text-4xl font-bold md:mt-10 ml-4"
  >
    <h2>{title}</h2>
  </div>

  <div
    class="md:grid md:grid-cols-3 place-items-center md:ml-20 md:mr-20 md:mt-10 pb-20"
  >
    {
      card.map((item) => (
        <div class="bg-white flex m-4 rounded-lg w-[29rem] h-[100px] md:w-[350px]">
          <div class="flex justify-between m-6 space-x-8">
            <div class="flex justify-between">
              <div class="flex items-center justify-center w-[48px] h-[48px] rounded-lg bg-blue-100">
                <div class="flex">
                  <item.logo />
                </div>
              </div>
              <div class="flex flex-col ml-[40px]">
                <div class="flex">
                  <h2 class="font-bold text-xl">{item.title}</h2>
                </div>
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</article>
