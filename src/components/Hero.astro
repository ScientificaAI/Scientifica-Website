---
import IconHero from "./IconHero.astro";

// components/Hero.astro
---

<section>
  <!-- header section: Text content -->
  <div>
    <h1>
      <span>UNLOCK</span>
      <span>THE POWER</span>
      <span>OF AI WITH</span>
      <span class="text-[#0024ff]">SCIENTIFICA</span>
    </h1>

    <IconHero class="md:hidden" />

    <!--foot section -->
    <div class="md:mt-0 mt-4 mb-4 order-3 md:order-2">
      <span
        class="flex mb-4 md:text-xl text-4xl text-center md:text-start md:w-[700px]"
      >
        From expanding knowledge to creating new opportunities, explore what
        your organization can achieve when there are no limits.
      </span>
      <div
        class="flex justify-center items-center mb-10 bg-[#0024ff] rounded-lg cursor-pointer p-2 md:py-2 w-[800px] m-auto md:m-0 md:w-[250px] hover:bg-blue-500"
      >
        <button
          id="btn-modal2"
          class="btn-modal2 text-white text-4xl md:text-xl font-semibold rounded-lg py-2 px-4 w-full"
        >
          Start a conversation
        </button>
      </div>
    </div>
  </div>

  <div
    class="hidden order-2 md:order-3 h-[300px] p-2 md:p-0 md:pb-10 md:flex md:mt-16"
  >
    <IconHero class="md:w-full h-[580px]" />
  </div>
  <!--hero section -->
</section>

<style lang="scss">
  @font-face {
    font-family: "Biotif";
    src: url("/font/biotif.otf") format("opentype");
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }

  body {
    width: fit-content;
  }

  section {
    background-color: #fff;
    display: flex;
    flex-direction: column;
    width: auto;

    @media (min-width: 768px) {
      flex-direction: row;
      padding-bottom: 2rem;
    }

    div:nth-child(1) {
      display: flex;
      flex-direction: column;
      margin-top: 7rem;
      order: 1;
      animation: blurred-fade-in 0.9s ease-in-out both;

      @media (min-width: 768px) {
        position: relative;
        left: 1rem;
        margin-left: 2.5rem;
        padding-left: 1rem;
        width: 40%;
      }
    }

    div:nth-child(2) {
      // Estilos para el segundo div
    }

    div:nth-child(3) {
      // Estilos para el tercer div
    }
  }

  h1 {
    font-family: "Biotif";
    font-size: 5.5rem;
    line-height: 1;
    margin-bottom: 1rem;
    text-align: center;

    @media (min-width: 768px) {
      text-align: start;
    }

    span {
      display: block;
    }
  }

  @keyframes blurred-fade-in {
    0% {
      filter: blur(5px);
      opacity: 0;
      transform: translate3d(-100px, 0, 0);
    }
    100% {
      filter: blur(0);
      opacity: 1;
      transform: translate3d(0, 0, 0);
    }
  }
</style>
