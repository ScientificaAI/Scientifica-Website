---
import { cards } from "../data/cards";
import IconPlus from "./IconPlus.astro";
---

{
  cards.map((card) => (
    <div class="bg-white flex m-2 rounded-lg w-[760px] md:w-[250px] md:h-[100px] h-40 ">
      <div class="flex items-center justify-between m-6 space-x-8">
        <div class="flex items-center justify-center md:w-[48px] md:h-[48px] w-[68px] h-[68px] rounded-lg bg-blue-100">
          <div class="flex items-center justify-center w-10 h-10 md:w-4 md:h-4">
            <card.logo />
          </div>
        </div>

        <div class="flex flex-col ml-[40px]">
          <div class="flex items-center gap-1">
            <span
              class="num font-bold md:text-2xl text-4xl"
              data-val={card.title}
            >
              {card.title}
            </span>
            <IconPlus class="w-8 h-8 md:w-4 md:h-4  text-black" />
          </div>
          <div class="flex">
            <p class="text-gray-500 text-2xl md:text-sm">{card.body}</p>
          </div>
        </div>
      </div>
    </div>
  ))
}
