---
interface Props {
	title: string;
	body: string;
	logo: string;
}

const { title, body, logo } = Astro.props;
---

<div class="bg-white flex m-10 rounded-lg min-w-50">
	<div class="flex justify-between m-10 space-x-8 ">
		<div class="flex justify-between ">
			<div class="flex items-center justify-center w-[50%] rounded-lg bg-blue-100">
				<div class="flex">
					<img src={logo} alt={title} />
				</div>
			</div>
			<div class="flex flex-col ml-[40px]">
				<div class="flex">
					<h2 class="font-bold text-2xl">
						{title}
					</h2>
				</div>
				<div>
					<p class="text-gray-500">
						{body}
					</p>
				</div>
			</div>
		</div>
	</div>
</div>

<style>
	li {
		list-style: none;
	}
</style>
