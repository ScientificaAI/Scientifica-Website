---
import Card3 from "../../components/Card3.astro";
import Header from "../../components/Header.astro";
import Vector from "../../components/Vector.astro";
import { card3 } from "../../data/card3";
---

<main>
  <Header />
  <section id="primary">
    <Vector />
    <div class="m-auto pb-4 pt-4">
      <h1 class="text-8xl font-bold text-center">Services</h1>
    </div>
    <div class="m-auto max-w-[750px]">
      <p class="text-2xl font-light text-center">
        With science at our core, we're a powerhouse in utilizing science, and
        engineering practical solutions to lead you into the future.
      </p>
    </div>
  </section>

  <section class="md:m-10 md:p-6">
    <div class="grid grid-cols-1 md:grid-cols-2 place-items-stretch">
      {card3.map((card) => <Card3 {...card} />)}
    </div>
  </section>
</main>

<style>
  #primary {
    background-image: url("../../../public/Capa11.svg");
    min-height: 400px;
  }
</style>
